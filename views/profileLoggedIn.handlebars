<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
            <a class="nav-item nav-link active" href="/profile"><i class="fas fa-user-circle"></i> Profile</a>
            <a class="nav-item nav-link" href="/scrape"><i class="far fa-newspaper"></i> View New Articles</a>
            <a class="nav-item nav-link" href="/auth/logout"> <i class="far fa-times-circle"></i> Logout</a>
            </div>
        </div>
    </nav>
</header>
<main>
    <h1 class="text-center">Your Archive</h1>
    <section class="container">
        {{#each articles}}
        <article>
            <div class='row'>
                <h2 class='text-center col'>{{title}}</h2>
            </div>
            <div class='row'>
                <div class='col'></div>
                <img class='article-img col-sm-4 img-responsive' src={{image}} alt="" />
                <div class='col'></div>
            </div>
            <div class='row'>
                <p class='text-center col'>{{summary}}</p>
            </div>
            <div class='row'>
                <a class='text-center col' href={{link}}>Link to the Article at the New York Times</a>
            </div>
            
            <div class="container">
            <div class='row'>
                <div class=""></div>
                <button class='addNote col-md-4 btn btn-success text-center' value={{_id}}>Add a Note</button>
                {{#if note}}
                    <button class='previousNote col-md-4 btn btn-warning text-center' data-note='{"noteTitle":"{{note.noteTitle}}", "noteContent": "{{note.noteContent}}" }' value={{_id}}>Previous Note</button>
                {{/if}}
                <button class='deleteArticle col-md-4 btn btn-danger text-center' value={{_id}}>Remove this article</button>
            </div>
            </div>
            <br/>
            <hr>
            <br/>
        </article>
        {{/each}}


    <section id='previousNoteModal' class='modal'>
        <div id='previous-modal-content' class='modal-content container text-center'>
            <h3 id='prevNoteTitle'></h3>
            <div id='prevNoteContent'></div>
            <div>
                <button id="previousModalClose" class="btn btn-outline-danger">Close</button>
            </div>
        </div>
    </section>


    <section id='modal' class='modal'>
        <div id='modal-content' class='modal-content container text-center'>
            <input id='noteTitle' type='text' placeholder='Title' />
            <textarea id='noteText' name="textarea" rows="10" cols="50" placeholder="Write your note"></textarea>
            <div>
                <button id='submitNote' class='btn btn-outline-success'>Submit</button>
                <button id="close" class="btn btn-outline-danger">Close</button>
            </div>
        </div>
    </section>

    </section>       

   
</main>
